<div class="custom-listing list">
<% for (let i = 0; i < items.length; i++) { %>
<% const item = items[i]; %>
<div class="listing-item" <%= metadataAttrs(item) %>>
<% const imageUrl = item.image || 'images/neuroshepherd_melted.png'; %>
<div class="listing-image">
<a href="<%= item.path %>"><img src="<%= imageUrl %>" alt="<%= item.title %>" /></a>
</div>
<div class="listing-content">
<h3 class="listing-title"><a href="<%= item.path %>"><%= item.title %></a></h3>
<p class="listing-date"><%= item.date %></p>
<% if (item.description) { %>
<p class="listing-description"><%= item.description %></p>
<% } %>
<% if (item.categories) { %>
<ul class="listing-categories">
<% for (const category of item.categories) { %>
<li><span class="category-icon">â˜…</span> <%= category %></li>
<% } %>
</ul>
<% } %>
</div>
</div>
<% } %>
</div>

<style>
.custom-listing {
  margin: 20px auto;
  max-width: 800px; /* Restrict the width of the listing */
}

.listing-item {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
  gap: 20px;
}

.listing-image img {
  width: 200px; /* Increased image width */
  height: 200px; /* Increased image height */
  object-fit: cover;  /* consider using 'cover', 'fill', or 'contain' */
  border-radius: 10px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  margin-right: 30px; /* Added more space between the image and content */
  transition: transform 0.75s ease; /* Smooth transition for hover effect */
  background-color: #ddd;
}

.listing-image img:hover {
  transform: scale(1.1); /* Pop-up effect on hover */
}

.listing-content {
  flex: 1;
}

.listing-content h3 {
  margin: 0 0 5px;
  font-size: 1.5rem;
}

.listing-content h3 a {
  color: #000; /* Title color set to black */
  transition: color 0.5s ease; /* Smooth transition for hover effect */
}

.listing-content h3 a:hover {
  color: orange; /* Title turns orange on hover */
}

.listing-content a {
  text-decoration: none;
  color: #007bff;
}

.listing-content a:hover {
  text-decoration: underline;
}

.listing-date {
  font-size: 0.9em;
  color: #6c757d;
}

.listing-description {
  margin: 10px 0;
  font-size: 1.2rem; /* Increased font size for description */
  color: #333;
}

.listing-categories {
  list-style: none;
  padding: 0;
  margin: 10px 0;
}

.listing-categories li {
  display: inline-block;
  white-space: nowrap;
  background-color: #f18484; /* Red fill color */
  margin: 0 0.2em 0.4em 0;
  padding: 0.2em 0.4em;
  font-size: 0.85em;
  border-radius: 0.25rem;
  border: 1px solid #ddd;
  color: #fff; /* White text for contrast */
}

.category-icon {
  margin-right: 0.3em; /* Add spacing between icon and text */
  color: #fff; /* Match text color */
}
</style>
