<% 
// Sort items by date (most recent first) and take only the first 3
const recentPosts = items
  .filter(item => !item.draft) // Filter out draft posts
  .sort((a, b) => new Date(b.date) - new Date(a.date))
  .slice(0, 3);
%>

<div class="recent-posts-container">
<% for (const post of recentPosts) { %>
<div class="recent-post-card">
<a href="<%= post.path %>" class="recent-post-link">
<img src="<%= post.image || 'images/neuroshepherd_melted.png' %>" 
alt="<%= post.title %>" 
class="recent-post-image" />
<div class="recent-post-title">
<%= post.title %>
</div>
</a>
</div>
<% } %>
</div>

<style>
.recent-posts-container {
  display: flex;
  gap: 20px;
  width: 100%;
  flex-wrap: nowrap;
}

.recent-post-card {
  flex: 1 1 calc(33.333% - 20px);
  aspect-ratio: 1 / 1.5;
  display: flex;
}

.recent-post-link {
  display: flex;
  flex: 1;
  height: 100%;
  border-radius: 10px;
  overflow: hidden;
  position: relative; /* needed for overlay positioning */
}

.recent-post-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  transition: transform 0.75s ease;
  background-color: #ddd;
}

.recent-post-image:hover {
  transform: scale(1.1);
}

/* Overlay title styling */
.recent-post-title {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.6); /* semi-transparent dark background */
  color: white;
  font-size: 1.2rem;
  font-weight: bold;
  padding: 10px;
  text-align: center;
  opacity: 0;
  transform: translateY(100%);
  transition: all 0.3s ease;
}

/* On hover, show the title */
.recent-post-link:hover .recent-post-title {
  opacity: 1;
  transform: translateY(0);
}

</style>

