<% 
// Load the fun projects from the provided items
const funProjects = items;
%>

<div id="funProjectsCarousel" class="carousel slide" data-bs-ride="carousel">
<!-- Indicators -->
<div class="carousel-indicators">
<% funProjects.forEach((project, index) => { %>
<button type="button" data-bs-target="#funProjectsCarousel" data-bs-slide-to="<%= index %>" 
class="<%= index === 0 ? 'active' : '' %>" aria-current="<%= index === 0 ? 'true' : 'false' %>" 
aria-label="Slide <%= index + 1 %>"></button>
<% }); %>
</div>

<!-- Carousel items -->
<div class="carousel-inner">
<% funProjects.forEach((project, index) => { %>
<div class="carousel-item <%= index === 0 ? 'active' : '' %>">
<img src="<%= project.image %>" class="d-block w-100" alt="<%= project.title %>">
<div class="carousel-caption d-none d-md-block">
<h5><%= project.title %></h5>
</div>
</div>
<% }); %>
</div>

<!-- Controls -->
<button class="carousel-control-prev" type="button" data-bs-target="#funProjectsCarousel" data-bs-slide="prev">
<span class="carousel-control-prev-icon" aria-hidden="true"></span>
<span class="visually-hidden">Previous</span>
</button>
<button class="carousel-control-next" type="button" data-bs-target="#funProjectsCarousel" data-bs-slide="next">
<span class="carousel-control-next-icon" aria-hidden="true"></span>
<span class="visually-hidden">Next</span>
</button>
</div>

<style>
.carousel-inner img {
  width: 100%;
  height: auto;
}

.carousel-caption {
  background: rgba(0, 0, 0, 0.5);
  padding: 10px;
  border-radius: 5px;
}

.carousel-control-prev-icon,
.carousel-control-next-icon {
  background-color: #007bff;
  border-radius: 50%;
}

.carousel-control-prev-icon:hover,
.carousel-control-next-icon:hover {
  background-color: #0056b3;
}

#funProjectsCarousel {
  max-width: 600px; /* Reduce the overall width of the carousel */
  margin: 0 auto; /* Center the carousel */
  border-radius: 15px; /* Round the edges of the carousel */
  overflow: hidden; /* Ensure content respects the rounded edges */
  width: 85%;
  position: center;
}

#funProjectsCarousel .carousel-item {
  height: 400px; /* Adjust the height to make the carousel smaller */
}

#funProjectsCarousel .carousel-item img {
  width: 100%;
  height: 100%;
  object-fit: cover; /* Ensure the image covers the available space */
  object-position: center; /* Center the image within the space */
}
</style>
